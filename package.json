{
  "name": "ost2go",
  "version": "2.1.2",
  "description": "A comprehensive Node.js application to convert, extract, and manage Microsoft Outlook OST files with UTF-8 support",
  "main": "src/index.js",
  "bin": {
    "ost2go": "./bin/ost2go.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "node test/test.js",
    "build": "npm run build:win && npm run build:linux && npm run build:mac",
    "build:win": "pkg . --target node18-win-x64 --output dist/ost2go-win-x64.exe",
    "build:linux": "pkg . --target node18-linux-x64 --output dist/ost2go-linux-x64",
    "build:mac": "pkg . --target node18-macos-x64 --output dist/ost2go-macos-x64",
    "build:all": "pkg . --targets node18-win-x64,node18-linux-x64,node18-macos-x64 --out-path dist"
  },
  "keywords": [
    "outlook",
    "ost",
    "pst",
    "converter",
    "email",
    "utf8",
    "extractor",
    "eml"
  ],
  "author": "SkyLostTR (@Keeftraum)",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/SkyLostTR/OST2GO.git"
  },
  "homepage": "https://github.com/SkyLostTR/OST2GO",
  "bugs": {
    "url": "https://github.com/SkyLostTR/OST2GO/issues"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "fs-extra": "^11.1.1",
    "progress": "^2.0.3",
    "pst-extractor": "^1.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": [
      "src/**/*.js",
      "bin/**/*.js"
    ],
    "assets": [
      "node_modules/chalk/**/*",
      "node_modules/commander/**/*",
      "node_modules/fs-extra/**/*",
      "node_modules/progress/**/*",
      "node_modules/pst-extractor/**/*"
    ],
    "outputPath": "dist"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
